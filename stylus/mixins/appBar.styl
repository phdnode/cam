.appBar
    font-family: 'Arial';
    /* font-weight: bold; */
    position: fixed
    padding: 5px;
    top: 0;
    right: 0;
    left: 0;
    height: 26px;
    z-index: 2;
    // background: linear-gradient(to bottom, #fff 80%, rgba(255,255,255,0.1) 98%, rgba(255,255,255,0) 100%);
    background: white
    /* color: #fff; */
    /* padding: 10px; */
    display: flex;
    flex-direction: row;
    flex-flow: nowrap;
    justify-content: space-between;
    align-items: center
    -webkit-transform: translate3d(0, 0, 0);
    border-bottom: 1px solid lightGray
    @media (min-width: 600px)
        height: 30px
        font-size: 30px

.app-menus
    display: flex;
    flex-direction: row;
    flex-flow: nowrap;
    justify-content: flex-start;
    align-items: center

.app-title:hover, .app-menu:hover
    background-color: lightGray

.app-title
    font-family: $title-font
    color: black
    font-size: 22px
    cursor: pointer
    padding: 5px
    // text-shadow: $md-card-1
    // height: inherit;

.app-menu
    font-family: $title-font
    color: black
    font-size: 14px
    cursor: pointer
    padding: 5px
    color: gray
    height: inherit;

.app-icon
    width: 30px
    height: 30px
    @media (min-width: 600px)
        height: 28px
        width: 28px


.app-icon img
    width: 100%
    height: auto

.menuIcon, .loginIcon
    padding: 10px
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

.loginIcon
    visibility: hidden

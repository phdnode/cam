$title-header-color = #008080

.metaphysical-panel
    box-shadow: $md-card-4
    z-index: 10
    width: 300px
    height: 100%
    top: 0
    left: 0
    position: fixed
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start;
    background-color: $utility

.metaphysical-title-container
    background-color: $title-header-color
    color: white
    font-size: 22px
    height: 80px
    width: 100%
    display: flex
    flex-direction: row
    justify-content: flex-start
    align-items: flex-end;
    box-shadow: $md-card-1

.metaphysical-title
    padding:10px

.metaphysical-image
    position: fixed
    left: 270px
    top: 10px
    height: 60px
    width: 60px
    border-radius: 50%
    box-shadow: $md-card-4

.substance
    margin-top: 20px
    margin-bottom: 20px
    background-color: transparent;
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    width: 100%

.principle-attribute
    background-color: transparent

.attributes
    padding: 2px
    background-color: transparent
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start
    border-style: inset
    border-width: 2px

.attribute-label
    margin-top: 10px
    background-color: transparent


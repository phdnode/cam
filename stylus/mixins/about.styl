.about-page
    left: 0
    right: 0
    width: 100%
    // height: 100%
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    background-color: white
    border: 1px solid lightGray
    border-radius: 3px;
    box-shadow: $md-card-2;
    margin: 5px
    padding: 10px
    margin-top: 40px
    @media (min-width: 600px)
        margin-top: 50px
        padding: 20px
        width: 700px

.about-item, .about-title, .about-item-title
    font-family: $title-font
    padding-left: 15px
    padding-right: 15px
    // width: 700px

.about-item
    font-size: 15px
    text-shadow: none
    // padding: 10px

.about-item-title
    font-size: 18px
    text-shadow: none
    padding-top: 15px
    padding-bottom: 3px
    color: #C12127
    // font-weight: bold;

.about-title
    font-size: 22px
    text-shadow: none
    padding-top: 15px
    @media (min-width: 600px)
        font-size: 28px
        padding-top: 30px
        width: 700px
    // color: #C12127
    //font-weight: bold;
